<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>epc.spider</groupId>
	<artifactId>spider</artifactId>
	<version>0.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>spider</name>
	<url>http://maven.apache.org</url>

	<parent>
		<groupId>epc.commons</groupId>
		<artifactId>master-pom</artifactId>
		<version>1.8-SNAPSHOT</version>
	</parent>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<testng.version>6.8.8</testng.version>
		<metadataformat.version>0.1-SNAPSHOT</metadataformat.version>
		<beefeater.version>0.1-SNAPSHOT</beefeater.version>
	</properties>

	<repositories>
		<repository>
			<id>epc-release</id>
			<name>EPC Nexus Release Repository</name>
			<url>http://epc.ub.uu.se/nexus/content/groups/public</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>epc-snapshot</id>
			<name>EPC Nexus Snapshot Repository</name>
			<url>http://epc.ub.uu.se/nexus/content/groups/public-snapshots</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<updatePolicy>daily</updatePolicy>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>
	<dependencies>
		<dependency>
			<groupId>epc.metadataformat</groupId>
			<artifactId>metadataformat</artifactId>
			<version>${metadataformat.version}</version>
		</dependency>
		<dependency>
			<groupId>epc.beefeater</groupId>
			<artifactId>beefeater</artifactId>
			<version>${beefeater.version}</version>
		</dependency>
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>${testng.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>
